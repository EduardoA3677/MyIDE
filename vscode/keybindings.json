[
  // Explorer
  {
    "key": "l",
    "command": "list.toggleExpand",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "shift+y",
    "command": "copyFilePath",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "shift+o",
    "command": "revealFileInOS",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "tab",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorTextFocus && !inputFocus"
  },
  // Windows
  {
    "key": "tab",
    "command": "workbench.action.focusNextGroup",
    "when": "editorTextFocus && neovim.init && neovim.mode == 'normal'"
  },
  {
    "key": "shift+tab",
    "command": "workbench.action.focusPreviousGroup",
    "when": "editorTextFocus && neovim.init && neovim.mode == 'normal'"
  },
  // Files
  {
    "key": "ctrl+shift+r",
    "command": "workbench.action.openRecent"
  },
  // Search
  {
    "key": "alt+w",
    "command": "vscode-neovim.send-cmdline",
    "args": "<A-w>",
    "when": "neovim.init && neovim.mode == 'cmdline'"
  },
  {
    "key": "alt+c",
    "command": "vscode-neovim.send-cmdline",
    "args": "<A-c>",
    "when": "neovim.init && neovim.mode == 'cmdline'"
  },
  {
    "key": "alt+r",
    "command": "vscode-neovim.send-cmdline",
    "args": "<A-r>",
    "when": "neovim.init && neovim.mode == 'cmdline'"
  },
  // Scroll
  {
    "key": "alt+f",
    "command": "scrollRight"
  },
  {
    "key": "alt+b",
    "command": "scrollLeft"
  },
  // Motion
  {
    "key": "alt+h",
    "command": "cursorLeft",
    "when": "textInputFocus"
  },
  {
    "key": "alt+l",
    "command": "cursorRight",
    "when": "textInputFocus"
  },
  // Operation
  {
    "key": "alt+j",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+k",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  // Language
  {
    "key": "ctrl+n",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible && neovim.init && neovim.mode == 'insert'"
  },
  {
    "key": "ctrl+p",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible && neovim.init && neovim.mode == 'insert'"
  },
  {
    "key": "j",
    "command": "editor.action.scrollDownHover",
    "when": "editorHoverFocused"
  },
  {
    "key": "k",
    "command": "editor.action.scrollUpHover",
    "when": "editorHoverFocused"
  },
  // UI
  {
    "key": "ctrl+shift+g",
    "command": "workbench.view.scm",
    "when": "workbench.scm.active"
  }
]
