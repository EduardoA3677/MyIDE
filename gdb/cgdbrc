" vim: filetype=vim
set autosourcereload    " 自动加载源文件，当更改并重新编译时
set debugwincolor       " 当程序输出ANSI escape code for color，原样输出颜色，而非escape code
set wso=vertical        " 设置布局方向，竖直
set winsplit=src_big    " 两个窗口的比例
set eld='highlight'     " 高亮当前正在执行的行
set sld='highlight'     " 高亮当前选择的行
set hlsearch            " 高亮搜索
set ignorecase          " 搜索时忽略大小写
set showmarks           " 显示书签

map a i
imap <c-c> <esc>
