    // Actions
    "keybindings": [
        {
            "command": "copy",
            "keys": "ctrl+shift+c"
        },
        {
            "command": "paste",
            "keys": "ctrl+shift+v"
        },
        {
            "command": "find",
            "keys": "ctrl+shift+f"
        },
        {
            "command": {
                "action": "openSettings",
                "target": "settingsUI"
            },
            "keys": "ctrl+,"
        },
        {
            "command": {
                "action": "openSettings",
                "target": "settingsFile"
            },
            "keys": "ctrl+shift+,"
        },
        {
            "command": {
                "action": "openSettings",
                "target": "defaultsFile"
            },
            "keys": "ctrl+alt+,"
        },
        {
            "command": "toggleFullscreen",
            "keys": "f11"
        },
        {
            "command": "unbound",
            "keys": "ctrl+shift+down"
        },
        {
            "command": "unbound",
            "keys": "ctrl+shift+up"
        },
        {
            "command": "unbound",
            "keys": "alt+p"
        },
        {
            "command": "unbound",
            "keys": "alt+t"
        }
    ],
    "profiles": {
        "defaults": {
            "colorScheme": "Blazer",
            "fontFace": "NerdCodePro Font",
            "fontWeight": "normal",
            "fontSize": 10,
            "cursorShape": "filledBox",
            "useAcrylic": true,
